{
    "Version": "1.1",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "cce:nodepool:list",
                "cce:nodepool:get"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "cce:cluster:get"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "dns:recordset:delete",
                "dns:recordset:create",
                "dns:recordset:get",
                "dns:recordset:list",
                "dns:zone:get"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "ces:siteMonitorRule:delete",
                "ces:remoteChecks:list",
                "ces:siteMonitorRule:put",
                "ces:siteMonitorHealthCheck:get",
                "ces:siteMonitorHealthCheck:create"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "vpc:securityGroupRules:create",
                "vpc:securityGroups:create",
                "vpc:securityGroupRules:delete",
                "vpc:securityGroupRules:get",
                "vpc:securityGroupTags:create",
                "vpc:securityGroups:delete",
                "vpc:securityGroups:update",
                "vpc:securityGroupRules:update",
                "vpc:securityGroupTags:get",
                "vpc:securityGroups:get"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "CCE:*:*"
            ]
        }
    ]
}